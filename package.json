{
  "name": "@ls-age/devtools",
  "version": "0.0.0",
  "private": true,
  "description": "A collection of devtools",
  "license": "MIT",
  "author": "Lukas Hechenberger <npm@ls-age.com>",
  "scripts": {
    "format": "prettier --ignore-path .gitignore --plugin-search-dir . \"**/*\" \"!**/{.*ignore,*.png}\"",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "8.3.4",
    "@ls-age/eslint-config": "0.9.2",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "commitlint": "8.3.5",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.2",
    "prettier": "1.19.1",
    "prettier-plugin-package": "0.3.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,svelte,json,yml,html,sass,scss,css,md}": [
      "prettier --plugin-search-dir . --write",
      "git add"
    ],
    "*.{js,svelte}": [
      "eslint --fix",
      "git add"
    ]
  },
  "renovate": {
    "extends": [
      "@ls-age:automergeDev"
    ]
  }
}
